<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mahir.alert_box.alertactivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="one button alert "
        android:id="@+id/btone"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="two button alert"
        android:id="@+id/bttwo"
        android:layout_below="@+id/btone"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="three button alert"
        android:id="@+id/btthree"
        android:layout_below="@+id/bttwo"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="date picker"
        android:id="@+id/btdatepicker"
        android:layout_below="@+id/btthree"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="timePicker"
        android:id="@+id/bttimepicker"
        android:layout_below="@+id/btdatepicker"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="custom dialog alerat"
        android:id="@+id/btcustom"
        android:layout_below="@+id/bttimepicker"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="radio alert"
        android:id="@+id/btnradio"
        android:layout_below="@+id/btcustom"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="check box alert"
        android:id="@+id/btncheckbox"
        android:layout_below="@+id/btnradio"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
